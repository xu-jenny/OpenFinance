generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model WarnNotice {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  companyName String
  noticeDate  DateTime
  layoffDate  DateTime?
  numAffected Int
  state       State
}

model Question {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  question     String
  llm_response String?
  error        String?
  uid          String   @db.Uuid
  User         User     @relation(fields: [uid], references: [id])
}

model User {
  id        String     @id @db.Uuid
  createdAt DateTime   @default(now())
  email     String
  Question  Question[]
}

model TableMetaData {
  id           Int    @id @default(autoincrement())
  tableName    String
  promptSchema String
}

enum State {
  NY
  NJ
  CA
  WA
  CO
  FL
  TX
  NC
  MI
  MD
}
