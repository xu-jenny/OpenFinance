generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["multischema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
  // schemas   = ["public", "auth"]
}

enum State {
  NY
  NJ
  CA
  WA
  CO
  FL
  TX
  NC
  MI
  MD
}

model WarnNotice {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  companyName String
  noticeDate  DateTime
  layoffDate  DateTime?
  numAffected Int
  state       State
}

model Question {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  question     String
  llm_response String?
  error        String?
  User         User     @relation(fields: [uid], references: [id])
  uid          String   @db.Uuid
}

model User {
  id        String     @id @db.Uuid // @default(uuid()) @db.Uuid
  createdAt DateTime   @default(now())
  email     String
  Question  Question[]
}

model TableMetaData {
  id           Int    @id @default(autoincrement())
  tableName    String
  promptSchema String
}
