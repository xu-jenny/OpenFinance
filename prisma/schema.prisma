generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum State {
  NY
  NJ
  CA
  WA
  CO
  FL
  TX
  NC
  MI
  MD
}

model WarnNotice {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  companyName String
  noticeDate  DateTime
  layoffDate  DateTime?
  numAffected Int
  state       State
}

model TableMetaData {
  id           Int    @id @default(autoincrement())
  tableName    String
  promptSchema String
}
